{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx" // Use "react" if you are using React 16 or below
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
